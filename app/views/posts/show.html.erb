<div class="container container-blog">
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  
  <p>
    <strong>Body:</strong>
    <%= raw @post.body %>
  </p>
  <% if signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_post_path(@post) %> <% end %>|
  <%= link_to 'Back', posts_path %>
</div>